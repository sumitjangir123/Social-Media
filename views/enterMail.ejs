<link rel="stylesheet" href="<%=assetPath('css/passResForm.css')%>">
<div class="form-layout">
    <img src="<%=assetPath('images/doubt.svg')%>" class="animated zoomInUp">
    <div>
        <h1 class="p-4" >Forgot your <span style="color: green;">password?</span></h1>
        <p class="py-1 px-4 ">Don't worry. Resetting your password is easy, just tell us the email address you registered with <span style="color: red;"> Thunder Bird.</span></p>
    </div>
        <div>
            <form action="/users/reset-password" method="POST" class="px-3">
    
                <!-- email -->
                <div class="md-form my-5">
                    <i class="fas fa-envelope prefix"></i>
                    <input type="email" name="email" id="inputIconEx1" class="form-control" required>
                    <label for="inputIconEx1">E-mail address</label>
                </div>
    
                <button class="btn rounded-pill w-100" style="background: green; color: white;">Send</button>
            </form>
        </div>
</div>



<p class="d-flex justify-content-center"><a href="/">Back to home</a></p>
<hr class="bg-secondary w-50">