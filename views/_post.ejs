<li id="post-<%=i.id%>">
        <%if (locals.user && locals.user.id==i.user.id) {%>
        <a class="delete-post-button" href="post/destroy/<%=i.id%>"><span><i class="fas fa-times-circle"></i></span></a>
        <%}%>
        <span><%=i.content%></span>: <span id="user-name"><%=i.user.name%></span>
    
        <div class="post-comments">
                <% if (locals.user) {%>
                <form action="comment/create" id="post-<%=i._id%>-comments-form" method="POST">
                        <input type="text" name="content" placeholder="type here to add a comment. . .">
                        <input type="hidden" name="post" value="<%=i._id%>">
                        <input type="submit" value="add comment">
                </form>
                <% } %>
    
                 <div class="post-comments-list">
                         <ul id="post-comments-<%=i._id%>">
                                <% for(comment of i.comment) { %>
                                      <%- include('_comments')-%>
                                 <%}%>
                         </ul>
                 </div>
        </div>
    
    </li>